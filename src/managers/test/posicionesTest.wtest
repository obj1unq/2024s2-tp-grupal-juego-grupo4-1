import managers.posiciones.*
import managers.fantasmaManager.*
import escenarios.pantallaInicial.*
import personajes.pacman.*
import escenarios.levelPrueba.*

describe "Posiciones test" {

    method initialize(){
        game.addVisual(mainScreen)
        levelPrueba.iniciarNivel()
    }
    const fantasma = fantasmaManager.fantasmasEn(game.at(23,2)).get(0)


  test "fantasma se puede mover a la derecha o izquierda" {
      assert.equals([abajo,izquierda,derecha],posicion.direccionesValidas(fantasma))
  }



  test "Fantasma obtiene las direccion derecha"{
    fantasma.position(game.at(1,2))

    assert.equals(derecha, posicion.direccionRandom(fantasma))
  }

  test "Fantasma devuelve izquierda"{
    fantasma.moverse()
    assert.equals(izquierda, fantasma.haciaDondeIr())
  }
}