import src.personajes.pacman.*
import game.*


describe "Movimiento pacman" {

    method initialize(){
    game.addVisual(pacman)
    game.cellSize(40)
    game.width(25)
    game.height(15)
    }

    
  test "movimiento pacman hacia la derecha" {
    pacman.cambioDireccion(derecha)
    pacman.moverse()
    assert.equals(11, pacman.position().x())  // Cambiado a 11, porque parte de la posici贸n x = 10
  }
  test "movimiento pacman hacia la izquierda" {
    pacman.cambioDireccion(izquierda)
    pacman.moverse()
    assert.equals(9, pacman.position().x())  // Cambiado a 9, porque parte de la posici贸n x = 10
  }
  test "movimiento pacman hacia la arriba" {
    pacman.cambioDireccion(arriba)
    pacman.moverse()
    assert.equals(8, pacman.position().y())  // Cambiado a 8, porque parte de la posici贸n y = 7
  }
  test "movimiento pacman hacia la abajo" {
    pacman.cambioDireccion(abajo)
    pacman.moverse()
    assert.equals(6, pacman.position().y())  // Cambiado a 6, porque parte de la posici贸n x = 7
  }
}